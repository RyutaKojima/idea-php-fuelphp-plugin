<idea-plugin>
    <id>net.phoneportal.idea.fuelphp</id>
    <name>FuelPHP support</name>
    <vendor email="rkojima0213@gmail.com" url="https://github.com/RyutaKojima/idea-php-fuelphp-plugin">Ryuta Kojima</vendor>

    <description><![CDATA[
    This plug-in is to help development using the Fuel PHP framework.<br>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <gotoDeclarationHandler implementation="codeInsight.navigation.GotoHandler"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="FuelPHP.Menu" text="FuelPHP" description="FuelPHP support plugin">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="FuelPHP.Menu.Find.Usage" class="FindUsageIntelliSense" text="FindUsageIntelliSense" description="Find usage"/>
        </group>

        <action id="EditorBasics.EditorIllustrationAction"
                class="EditorIllustrationAction"
                text="Open File"
                description="Open current selection file."
                >
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>